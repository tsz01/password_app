<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tsz.myapplication.ch_passwd"
    tools:showIn="@layout/activity_ch_passwd">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText_current_passwd"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText_new_passwd"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText_current_passwd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText_new_passwd_2"
        android:layout_below="@+id/editText_new_passwd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp"
        android:layout_alignEnd="@+id/editText_new_passwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current password:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#050505" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password:"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText_current_passwd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:textColor="#010101" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat new password:"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText_new_passwd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:textColor="#050505" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cahnge"
        android:id="@+id/button_change_passwd"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editText_new_passwd_2"
        android:textColor="#000000"
        android:textSize="32px"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
